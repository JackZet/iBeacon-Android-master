<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/beaconIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/beacon_icon" />

        <TextView
            android:id="@+id/tvUUID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/beacon_uuid_simulator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/beaconSignalSelect"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Signal:"
                android:inputType="number" />

            <EditText
                android:id="@+id/beaconMinorSelect"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/minor"
                android:inputType="number" />

            <EditText
                android:id="@+id/beaconMajorSelect"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/major"
                android:inputType="number" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>